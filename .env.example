# ============================================================
# Bobon B Elementary School - Library Management System
# Environment Configuration
# ============================================================
# Copy this file to .env and update the values below.
# Run: copy .env.example .env (Windows)
# Run: cp .env.example .env (Linux/macOS)
# Then run: php artisan key:generate
# ============================================================

# --- Application Settings ---
APP_NAME="Library Management System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost/bes_library_sys/public

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_PH

APP_MAINTENANCE_DRIVER=file

# --- Performance ---
BCRYPT_ROUNDS=12

# --- Logging ---
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --- Database ---
# For XAMPP: Use the defaults below
# For production: Use a dedicated database user with a strong password
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=library_management
DB_USERNAME=root
DB_PASSWORD=

# --- Session ---
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# --- Cache & Queue ---
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database
CACHE_STORE=database

# --- Mail (Optional - for email notifications) ---
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="library@bobon.edu.ph"
MAIL_FROM_NAME="${APP_NAME}"

# --- Vite (Frontend Build Tool) ---
VITE_APP_NAME="${APP_NAME}"
